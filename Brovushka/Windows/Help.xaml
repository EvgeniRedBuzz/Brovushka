<Window x:Class="Brovushka.Windows.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brovushka.Windows"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="800">
    <Grid>
        <Border Width="200"
                Height="200"
                BorderThickness="1"
                BorderBrush="Gray">
            <StackPanel>
                <Image x:Name="ImageProduct"
                       Width="100"
                       Height="100"
                       Margin="0,10,0,0">
                    
                </Image>
                <TextBlock x:Name="TxtNameProduct"
                           FontFamily="Tahoma"
                           Margin="10,10,10,0"
                           FontSize="20" 
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="TxtCostProduct"
                           FontFamily="Tahoma"
                           FontSize="20"/>
                <TextBlock x:Name="TxtIsActive"
                           FontFamily="Tahoma"
                           FontSize="20"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
